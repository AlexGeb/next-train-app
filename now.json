{
  "version": 2,
  "name": "next-train-monorepo",
  "builds": [
    {
      "src": "back/*.js",
      "use": "@now/node-server"
    },
    { "src": "front/package.json", "use": "@now/static-build" }
  ],
  "routes": [
    { "src": "/api/.*", "dest": "/back/app.js" },
    { "src": "^/static/(.*)", "dest": "/front/static/$1" },
    { "src": ".*", "dest": "/front/index.html" }
  ],
  "alias": ["next-train"],
  "regions": ["bru1"],
  "env": {
    "MONGODB_ADDON_URI": "@mongodb_addon_uri"
  }
}
